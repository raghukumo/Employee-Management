  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div class="span3">
           <%= render "/layouts/sidebar" %>
        </div><!--/.span3-->

        <div class="span9">
          <div class="content">

            <div class="module">
              <div class="module-head">
                <h3>Leave Configuration</h3>
              </div>
               
              

              
                <div class="module-body table">
                <span >

                <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered table-striped  display" width="100%">
                  <thead>
                    <tr>
                      <th>Sick Leaves</th>
                      <th>Privilage Leaves</th>
                      <th>Work From home</th>
                      <th>Casual Leaves</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="odd gradeX">
                      <%@leave_configs.each do |leave|%>

                        <td><%=best_in_place leave, :sick_leaves, as: :input, url: leave_configuration_home_index_path%>

                        </td>
                        <td><%=best_in_place leave, :privilege_leaves, as: :input, url: leave_configuration_home_index_path%>
                        </td>  
                        <td><%=best_in_place leave, :work_from_home, as: :input, url: leave_configuration_home_index_path%>
                        </td>
                        <td><%=best_in_place leave, :casual_leaves, as: :input, url: leave_configuration_home_index_path%>
                        </td>
                        <%end%>
                    </tr>
                   
                   </tbody>
                </table>
</span>
<br>


              </div>
            </div><!--/.module-->

            <br />

          </div><!--/.content-->
        </div><!--/.span9-->
      </div>
    </div><!--/.container-->
  </div><!--/.wrapper-->
